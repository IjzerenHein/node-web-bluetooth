{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
        	"error",
        	{
        		"allow": ["warn", "error", "info", "debug"]
        	}
       	],
        "no-trailing-spaces": "error",
        "spaced-comment": [
            "error",
            "always"
        ],
        "eol-last": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "camelcase": "error",
        "new-cap": "error",
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    }
}
